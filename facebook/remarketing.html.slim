  ];
  var fbEventwebData = [
    { value : 90, color : "#92A3AC" },
    { value : 10, color : "#2779B7" },
  ];
  var fbActivewebData = [
    { value : 60, color : "#92A3AC" },
    { value : 40, color : "#2779B7" },
  ];


  var fbEcweb = document.getElementById("fb-ecweb-chart").getContext("2d");
