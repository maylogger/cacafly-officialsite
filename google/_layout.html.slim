doctype 5
html lang="zh-TW" class="no-js"
  head
    = render "/layout_head"
    = render "/layout_og"
  body.off-canvas data-spy="scroll" data-target=".sub-nav" data-offset="92"
    .wrapper

      .outside
        .outside-inner
          .main-nav data-set="main-nav"
            = render "/partials/main-nav"

      .page
        = render "/partials/header"
        .main
          = yield
        = render "/partials/footer"
        .off-canvas-mask

    = render "/layout_foot"
    = render "/layout_livereload"
